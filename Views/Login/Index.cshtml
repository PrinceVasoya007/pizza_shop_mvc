@using Microsoft.EntityFrameworkCore
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers;
@model pizza_shop_MVC.ViewModels.LoginModel;

@{
  ViewData["Title"] = "Home Page";
}


<div class=" row h-100 w-100  position-absolute ">
  <div class=" col-lg-6 d-none d-lg-block p-0 col-12 ">
    <img class=" img-fluid  login_img h-100 " src="images/dominos_background.jpg" alt="">
  </div>
  <div class="   col-lg-6 col-12 ps-0  show_bg_color ">
    <div class="   d-flex flex-column justify-content-center align-items-center h-100  ">

      <div class=" d-flex justify-content-center align-items-center ">
        <img class=" pizaashop_img " src="images/logos/pizzashop_logo.png" alt="">
        <h3 class="text-uppercase"> pizzashop</h3>
      </div>


      <form method="post" class=" w-75 m-3 " id="loginForm">
        <div>
          <h2>Welcome,</h2>
        </div>




        <div class="position-relative">
          <input type="text" name="Email" asp-for="Email" placeholder="Email*"
            class="  bg-light mt-3 mb-2 p-3 form-control" id="email">
          <span class="position-absolute" style="right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">
            <i class="bi bi-person-fill"></i>
          </span>
        </div>
        <span class="text-danger " asp-validation-for="Email"></span>
        @* <span id="emailError" class=" text-danger "></span>  *@




        <div class="position-relative">
          <input type="password" placeholder="Password*" asp-for="Password" class="mt-4 bg-light p-3 form-control"
            name="password" id="password-input">
          <span class="position-absolute" id="toggle-password"
            style="right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">
            <i class="bi bi-eye-slash-fill"></i>
          </span>
        </div>
        <span class="text-danger " asp-validation-for="Password"></span>
        @* <span id="passwordError"  class="text-danger "></span> *@


        <div class=" d-flex  justify-content-between  mt-4 ">
          <div class="">
            <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              remember me
            </label>
          </div>

         @if (Model?.Email != null)
                    {
                        <a asp-action="ResetPassword" asp-route-email="@Model.Email" class="text-decoration-none">Forgot Password?</a>
                    }
                    else
                    {
                        <a asp-action="ResetPassword" class="text-decoration-none">Forgot Password?</a>
                    }
        </div>


        <button class=" mt-4 btn btn-primary w-100 text-center  " type="submit">Login</button>


      </form>


    </div>
  </div>


</div>



